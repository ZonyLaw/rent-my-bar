<h1>Rent my bar</h1>

<div class="container">
<div class="list-index-card-wrapper">

      <%@bars.each do |bar|%>
        <div class="bar-index-card">
        <%=link_to bar_path(bar) do %>
          <%= image_tag 'bar2', class: 'image-list-cover',  alt: "Bar 1 layout" %>
        <%end%>
          <div class="bar-card-content">
            <div>
              <h3><%=bar.name%></h3>
              <p><%=bar.address%></p>
            </div>

            <div>
              <h5>Â£<%=bar.price%><span class="small">/day</span></h5>
            </div>
          </div>
        </div>
      <%end%>
  </div>

  <div id='map' style="width: 100%; height: 300px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>
