<div class="container">
  <h1>Find the bar of your dream</h1>
  <%= simple_form_for :search, url: bars_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" placeholder="Search a bar by name or address" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  <div class="result-text">
    <p class="text-center">We have found <strong><%= @bars.count %> bars</strong> matching your search</p>
  </div>

  <%# Things concerning the card %>
  <div class="bar-cards-wrapper">
    <%= render "shared/card" %>
  </div>

  <%# Things concerning the map %>

  <div id='map' style="width: 100%; height: 300px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
